<div class="album py-5 bg-light">
    <div class="container">         
        <div class="row">
              {{#each projects}}
                  <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img src="{{this.image}}" alt="{{this.alias}}" class="card-img-top">
                    <div class="card-body">
                        <h3 class="card-hard">{{this.name}}</h3>
                        <p class="card-text">{{this.description}}</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="/project/{{this.alias}}" class="btn btn-sm btn-outline-secondary">Details</a>
                                <a href="{{this.githuburl}}" class="btn btn-sm btn-outline-secondary">Github</a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
          {{/each}}            
           
        </div>
    </div>
</div>